{
    "name": "ortho_causal_vae_dsprites",
    "description": "Orthogonal Causal \u03b2-VAE on dSprites dataset",
    "output_dir": "./outputs",
    "checkpoint_dir": "./checkpoints",
    "log_dir": "./logs",
    "data": {
        "name": "dsprites",
        "root": "./data",
        "batch_size": 128,
        "num_workers": 0,
        "img_size": 64,
        "train_split": 0.8
    },
    "model": {
        "name": "ortho_causal_vae",
        "latent_dim": 10,
        "img_channels": 1,
        "hidden_dims": [
            32,
            32,
            64,
            64
        ],
        "beta": 4.0,
        "lambda_ortho": 1.0,
        "lambda_causal": 0.5,
        "use_causal_graph": true
    },
    "training": {
        "epochs": 1,
        "learning_rate": 0.001,
        "weight_decay": 0.0,
        "scheduler": "cosine",
        "scheduler_params": {},
        "optimizer": "adam",
        "gradient_clip": 0.0,
        "log_interval": 100,
        "save_interval": 10,
        "eval_interval": 1,
        "num_samples_to_save": 8,
        "device": "cuda",
        "seed": 42
    },
    "evaluation": {
        "compute_mig": true,
        "compute_sap": true,
        "compute_dci": false,
        "save_reconstructions": true,
        "save_samples": true,
        "save_traversals": true,
        "traversal_range": 3.0,
        "traversal_steps": 10
    },
    "use_wandb": false,
    "wandb_project": "ortho-causal-vae",
    "wandb_entity": null
}